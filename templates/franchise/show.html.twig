{% extends 'base.html.twig' %}

{% block title %}Franchise{% endblock %}

{% block body %}
    <h1>Franchise</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ franchise.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ franchise.Name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ franchise.Email }}</td>
            </tr>
            <tr>
                <th>Permissions</th>
                <td>
                  {% for permission in franchise.permissions %}
                    <span>| {{ permission.name }} </span>
                  {% endfor %}
                  |
                </td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ franchise.Active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <br />
    <a href="{{ path('app_franchise_index') }}">Liste des Franchises</a>
    <br />
    <a href="{{ path('app_franchise_edit', {'id': franchise.id}) }}">Modifier</a>
    <br />
    

    {{ include('franchise/_delete_form.html.twig') }}
{% endblock %}
