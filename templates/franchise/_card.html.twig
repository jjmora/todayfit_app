{# < CARD #}
<div class='col-md-6 col-lg-4'>
  {# {% if app.user %} #}
  <div class='card shadow'>
    <div class="overflow image-container">
      <img src="{{ image }}" alt="Today Fit Franchise" width="150px" class="card-img-top">
    </div>

    <div class='box-over d-flex flex-row' >
      <div class='card-body box-over-item'></div>
      <div class='box-over-item-white px-4 py-3 box-over-active'>
        <h4 class='card-title'>{{name}}</h4>
      </div>
    </div>

    <div class='card-body'>
      <p class='card-text pt-4 text-justify'>
        {{ description }}
      </p>

      <div class="d-flex flex-row flex-wrap">
        
        {% for permission in permissions %}
          {# < PERMISSION #}
            {% include 'franchise/_permission.html.twig' with {
              'permission_name' : permission.name,
              'image': permission.image
              }
            %}
          {# > PERMISSION #}
        {% endfor %}

      </div>

      <div class='d-flex justify-content-between align-items-center px-4 pt-4'>
        
        <small><img src="https://www.svgrepo.com/show/427089/packet.svg" class="mx-2" width="20px" />{{email}}</small>
        <a href="{{ id }}" class='btn btn-outline-success'>
          {{ button_label|default('Go') }}  
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-right-circle ms-2" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.854 5.146a.5.5 0 1 0-.708.708L9.243 9.95H6.475a.5.5 0 1 0 0 1h3.975a.5.5 0 0 0 .5-.5V6.475a.5.5 0 1 0-1 0v2.768L5.854 5.146z"/>
          </svg>
        </a>
      </div>

    </div>
    <div class="card-footer">
      <small class="text-muted">Franchis√© depuis le 25/05/2016</small>
    </div>

  </div>
  {# {% endif %} #}

</div>
{# > CARD #}