{% extends 'base.html.twig' %}

{% block title %}Partner{% endblock %}

{% block body %}
    <h1>Partner</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ partner.Name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ partner.Email }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ partner.Address }}</td>
            </tr>
            <tr>
                <th>Permissions</th>
                <td>
                  {% for permission in partner.permissions %}
                    <span>| {{ permission.name }} </span>
                  {% endfor %}
                  |
                </td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ partner.Active ? 'Yes' : 'No' }}</td>
            </tr>

        </tbody>
    </table>
    
    <br />
    <a href="{{ path('app_partner_index') }}">Liste des Structures</a>
    <br />
    <a href="{{ path('app_partner_edit', {'id': partner.id}) }}">Modifier</a>
    <br />

    {{ include('partner/_delete_form.html.twig') }}
{% endblock %}
