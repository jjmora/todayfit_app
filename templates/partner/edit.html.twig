{% extends 'base.html.twig' %}

{% block title %}Modifier Structure{% endblock %}

{% block body %}
<section class="container col-md-8 col-xl-6 border border-primary py-4 px-4 custom-form">

    <h1>Modifier Structure</h1>

    {{ include('partner/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Supprimer Structure
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Etes-vous sûre?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="alert alert-danger">
              <p>La Structure <b>{{ partner.Name }}</b> sera supprimée</p>
              {{ include('partner/_delete_form.html.twig') }}
            </div>
          </div>
        </div>
      </div>
    </div>

    <a href="{{ path('app_partner_index') }}" class="btn btn-warning">Retourner à la liste</a>

</section>
{% endblock %}
